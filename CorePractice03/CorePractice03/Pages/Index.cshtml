@page
@using CorePractice03.Models
@using CorePractice03.Services
@inject IDepartmentService departmentService

<div class="row">
    <div class="col-md-10 offset-md-2">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Employee Count</th>
                <th>操作</th>
            </tr>
            @Html.DisplayFor((x) => x.Departments)
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <!-- 跳轉到Department目錄下的AddDepartment頁面 -->
        <a asp-page="Department/AddDepartment">Add</a>
    </div>
</div>

@functions{
    public IEnumerable<Models.Department> Departments { get; set; }

    public async Task OnGetAsync()
    {
        Departments = await departmentService.GetAll();
    }
}